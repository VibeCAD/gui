rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read all files
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Users can upload to their own folder
    match /users/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow read access to all generated models (for gallery)
    match /generations/{generationId}/{fileName} {
      allow read: if true; // Public access for sharing
      allow write: if request.auth != null && request.auth.uid == resource.metadata['userId'];
    }
    
    // Temporary test uploads
    match /test/{fileName} {
      allow read, write: if request.auth != null;
    }
  }
}